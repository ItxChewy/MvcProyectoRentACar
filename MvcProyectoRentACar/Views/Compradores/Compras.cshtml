@model List<MvcProyectoRentACar.Models.Compra>

<div class="container-fluid pt-5">
    <div class="container pt-5 pb-3">
        <h1 class="display-4 text-uppercase mb-5">Mis Compras</h1>
        <div class="row">
            @foreach (var compra in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card border shadow-sm h-100">
                        <img class="card-img-top" src="~/images/@compra.Imagen" alt="@compra.Marca @compra.Modelo" style="width:300px;height:200px">
                        <div class="card-body">
                            <h5 class="card-title">@compra.Marca @compra.Modelo</h5>
                            <p class="card-text">
                                <strong>Fecha Inicio:</strong> @compra.FechaInicio.ToString("dd/MM/yyyy")<br>
                                <strong>Fecha Fin:</strong> @compra.FechaFin.ToString("dd/MM/yyyy")<br>
                                <strong>Precio:</strong> @compra.Precio.ToString("C")<br>
                                <strong>Estado:</strong>
                                @if (compra.EstadoReserva == "Activo")
                                {
                                    <span class="badge badge-success">@compra.EstadoReserva</span>
                                }
                                else if (compra.EstadoReserva == "Espera")
                                {
                                    <span class="badge badge-warning">@compra.EstadoReserva</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">@compra.EstadoReserva</span>
                                }
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <a asp-action="DetailsCoche" asp-controller="Compradores" asp-route-idcoche="@compra.IdCoche" class="btn btn-primary btn-block">Volver a Alquilar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
