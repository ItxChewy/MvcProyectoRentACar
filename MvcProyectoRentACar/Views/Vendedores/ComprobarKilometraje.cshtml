@model List<Reserva>

<div class="container-fluid py-5">
	<div class="container pt-5 pb-3">
		<h1 class="display-4 text-uppercase text-center mb-5">Comprobar Kilometraje</h1>
		@if (Model.Count() == 0)
		{
			<h3 class="text-uppercase text-center">No existen reservas</h3>
		}
		else
		{
			<div class="table-responsive">
				<table class="table  table-hover table-bordered">
					<thead>
						<tr>
							<th>Coche</th>
							<th>Fecha inicio</th>
							<th>Fecha fin</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						@foreach (Reserva reserva in Model)
						{
							@if(reserva.FechaFin.Date == DateTime.Today){
								<tr>
									<td>@reserva.IdCoche</td>
									<td>@reserva.FechaInicio.ToString("dd/MM/yyyy")</td>
									<td class="bg-success bg-opacity-25">@reserva.FechaFin.ToString("dd/MM/yyyy")</td>
									<td>
										<button class="btn btn-primary">Comprobar Kms</button>
									</td>
								</tr>
							}else{
								<tr>
									<td>@reserva.IdCoche</td>
									<td>@reserva.FechaInicio.ToString("dd/MM/yyyy")</td>
									<td class="bg-warning bg-opacity-25">@reserva.FechaFin.ToString("dd/MM/yyyy")</td>
									<td></td>
								</tr>
							}
							
						}
					</tbody>
				</table>
			</div>
		}

	</div>
</div>